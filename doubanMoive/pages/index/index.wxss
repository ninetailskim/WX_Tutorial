/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item .title, .item .sub-title{
  display: block;
  margin-bottom: 14rpx;
}

.item .title{
  font-size:32rpx;
}

.item .sub-title{
  font-size: 22rpx;
  color: #c0c0c0
}

.item .director{
  font-size: 26rpx;
  color:#999;
}

.item .rank{
  font-size: 28rpx;
  font-weight: bold;
  color:red;
}