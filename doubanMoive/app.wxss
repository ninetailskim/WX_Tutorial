page{
  font-family:"Microsoft YaHei";
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.page-header{
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-top: 10rpx;
}

.page-header-text{
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
  text-align: center;
}

.page-body{
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item{
  display: flex;
  padding:20rpx;
  border-bottom: 2rpx solid #eee;
}

.item .poster{
  width:128rpx;
  height:128rpx;
  margin-left:20rpx; 
  margin-right: 20rpx; 
}

.item .meta{
  flex:1;
}